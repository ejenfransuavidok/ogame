<?php
$form = $this->form;
$fieldset = $form->get('setting');

$typeof_id = $fieldset->get('typeof_id');
$typeof_id->setAttribute('class', 'form-control');
$typeof_id->setAttribute('placeholder', 'Post title');

$title = $fieldset->get('title');
$title->setAttribute('class', 'form-control');
$title->setAttribute('placeholder', 'Post title');

$text = $fieldset->get('text');
$text->setAttribute('class', 'form-control');
$text->setAttribute('placeholder', 'Post content');

$key = $fieldset->get('setting_key');
$key->setAttribute('class', 'form-control');
$key->setAttribute('placeholder', 'Post content');

$submit = $form->get('submit');
$submit->setValue($this->submitLabel);
$submit->setAttribute('class', 'btn btn-primary');

$form->prepare();

echo $this->form()->openTag($form);
?>

<fieldset>
<div class="form-group">
    <?= $this->formLabel($title) ?>
    <?= $this->formElement($title) ?>
    <?= $this->formElementErrors()->render($title, ['class' => 'help-block']) ?>
</div>

<div class="form-group">
    <?= $this->formLabel($key) ?>
    <?= $this->formElement($key) ?>
    <?= $this->formElementErrors()->render($key, ['class' => 'help-block']) ?>
</div>

<div class="form-group">
    <?= $this->formLabel($typeof_id) ?>
    <?= $this->formElement($typeof_id) ?>
    <?= $this->formElementErrors()->render($typeof_id, ['class' => 'help-block']) ?>
</div>

<div class="form-group">
    <?= $this->formLabel($text) ?>
    <?= $this->formElement($text) ?>
    <?= $this->formElementErrors()->render($text, ['class' => 'help-block']) ?>
</div>
</fieldset>

<?php
echo $this->formSubmit($submit);
echo $this->formHidden($fieldset->get('id'));
echo $this->form()->closeTag();
